# This is an example environment file.
# Copy this file to .env and fill in the values for your local development environment.

# --- KPI Dashboard Backend (FastAPI) ---

# MongoDB connection for FastAPI backend (used for analysis results, preferences, etc.)
MONGO_URL=mongodb://mongo:27017
MONGO_DB_NAME=kpi

# PostgreSQL connection for KPI data (used by /api/kpi/query)
# The backend container connects to this database.
# Use host.docker.internal to connect to a service running on the Docker host machine.
DB_HOST=host.docker.internal
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=pass
DB_NAME=netperf


# --- Standalone LLM Analysis Script (analysis_llm.py) ---

# LLM API endpoints, comma-separated
LLM_ENDPOINTS=http://10.251.204.93:10000,http://100.105.188.117:8888

# LLM model name
LLM_MODEL=Gemma-3-27B

# URL for the analysis script to post its results back to the backend
BACKEND_ANALYSIS_URL=http://localhost:8000/api/analysis-result


# --- KPI Dashboard Frontend (Vite) ---

# Base URL for the frontend to connect to the backend API.
# This is injected at build time into the frontend container.
VITE_API_BASE_URL=http://localhost:8000
